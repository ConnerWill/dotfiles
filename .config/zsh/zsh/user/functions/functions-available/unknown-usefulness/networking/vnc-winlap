function vnc-winlap(){

  ### Define Remote Host ###
  #local RHOST="192.168.64.103"
  local RHOST="192.168.69.103"
  local RPORT="5900"

  [[ -z '$RHOST:$RPORT' ]] \
    && echo -e "RHOST is not defined." \
      && return 1

  [[ -z '$RHOST:$RPORT' ]] \
    && echo -e "RPORT is not defined\n\nUsing port: '5900' ...\n" \
      && local RPORT="5900"

  echo -e "Connecting to '$RHOST:$RPORT' ..."
  vncviewer \
    -ConfirmClose=1 \
    -FullScreen=1 \
  "$RHOST:$RPORT" &

}
